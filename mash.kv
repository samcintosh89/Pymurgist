#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

AddMaltForm:

<AddMaltForm>:
	orientation: 'vertical'
	BoxLayout:
		height: '40dp'
		size_hint_y: None
		TextInput:
			id: search_box
			size_hint_x: 50
			focus: True
			multiline: False
		Button: 
			text: 'Search'
			size_hint_x: 25
		Button:
			text: 'Current Location'
			size_hint_x: 25
	ListView:
		id: search_results_list
		adapter:
			ListAdapter(
			data=[], 
			cls=main.LocationButton, 
			args_converter=root.args_converter)
	Button:
		height: "40dp"
		size_hint_y: None
		text: "Cancel"